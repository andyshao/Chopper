<div id="wrapper" class="content">
    <div class="blank">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th width="16%">内容</th>
                <th width="10%">用户</th>
                <th width="15%">话题</th>
                <th width="8%">评论数</th>
                <th width="8%">被赞</th>
                <th width="8%">被踩</th>
                <th width="15%">时间</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
                <% if(topics && topics.length){ %>
                <% for(var i = 0, len = topics.length; i < len; i++){ %>
                <% var curTopic = topics[i] %>
                <tr>
                    <td><%= curTopic.content %></td>
                    <td><b><%= curTopic.author_name %></b><% if(curTopic.author_nickName){ %><br>(<%= curTopic.author_nickName %>)<% } %></td>
                    <td><% if(curTopic.topic_Type){ %><%= curTopic.topic_Type %><% } %></td>
                    <td class="J-replyCount"><%= curTopic.replyCount %></td>
                    <td><%= curTopic.support %><% if(curTopic.support > 0){ %><br>(<%= curTopic.supporter %>)<% } %></td>
                    <td><%= curTopic.down %><% if(curTopic.down > 0){ %><br>(<%= curTopic.downer %>)<% } %></td>
                    <td><%= curTopic.create_time %></td>
                    <td>
                        <button class="btn btn-info J-update" type="button" data-type="topic" data-id="<%= curTopic._id %>">修改</button>
                        <button class="btn btn-danger J-remove" type="button" data-type="topic" data-id="<%= curTopic._id %>">删除</button>
                    </td>
                </tr>
                <% } %>
                <% } %>
            </tbody>
        </table>
    </div>
    <!-- page start -->
    <%- partial('pagination', {pre: "admin", pagination: pagination}) %>
    <!-- page end -->
</div>